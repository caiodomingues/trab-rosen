<html lang="en-US">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>

    <meta name="csrf-token" content="IrqrFV0PobrPrzmxCArmMpVsJOMBdNIOig61AywM">
    <link href="https://blog.hackatomic.com/css/fonts.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href="https://blog.hackatomic.com/css/app.css" rel="stylesheet">
    <link href="https://blog.hackatomic.com/css/material-icons.css" rel="stylesheet">

    @RenderSection("Styles", required: false)

    <style>
        header.head {
            height: initial !important;
            min-height: initial !important;
            padding-top: initial !important;
            padding-bottom: initial !important;
            background-color: #00569f;
        }

        footer, header.head {
            background-image: none !important;
        }

            .bg-custom, footer.footer {
                background-color: #113e72;
            }
    </style>
</head>

<body>
    <div id="app">
        <main>

            <nav class="navbar navbar-expand-md navbar-dark bg-custom sticky-top shadow">
                <div class="container">

                    <a href="https://foa.org.br" class="navbar-brand harlow text-md text-white">
                        <img src="http://www.foa.org.br/Images/new-logo.png" alt="Logo Unifoa" width="100%" height="50px" />
                    </a>

                    <button type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div id="navbarSupportedContent" class="collapse navbar-collapse">
                        <ul class="navbar-nav mr-auto"></ul>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-white">Home</a></li>
                            <li class="nav-item"><a asp-area="" asp-controller="Departamentoes" asp-action="Index" class="nav-link text-white">Departamentos</a></li>
                            <li class="nav-item"><a asp-area="" asp-controller="Instituicaos" asp-action="Index" class="nav-link text-white">Instituições</a></li>
                        </ul>
                    </div>

                </div>
            </nav>

            <header class="head">
                <div class="container mh-100">
                    <div class="row pt-5">
                        <div class="col-lg-12 text-center">
                            <h1 class="display-5 mb-5">Sistemas de Informação</h1>
                        </div>
                    </div>
                </div>
            </header>

            <partial name="_CookieConsentPartial" />

            @RenderBody()

        </main>

        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col order-xg-2 order-lg-2 order-bg-2 order-md-2 order-sm-1 footer-content">
                        <ul class="list-unstyled">
                            <li class="mt-4"><a href="https://foa.org.br" class="text-white"> UniFOA ₢ </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/popper.js/umd/popper.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="https://cnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js" asp-fallback-src="~/lib/popper.js/umd/popper.js"></script>
        <script src="https://cnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" asp-fallback-src="~/lib/jquery/jquery.min.js"></script>
        <script src="https://cnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js" asp-fallback-src="~/lib/bootstrap/dist/js/bootstra-grid.js"></script>
    </environment>

    @RenderSection("ScriptPage", required: false)

</body>
</html>
