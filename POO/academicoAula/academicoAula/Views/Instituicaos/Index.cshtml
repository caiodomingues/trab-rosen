@model IEnumerable<academicoAula.Models.Instituicao>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css" asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
}

<div class="container my-5">

    @if (TempData["Message"] != null) {
        <div class="alert alert-success" role="alert">
            @TempData["Message"]
        </div>
    }

    <div class="card border-0 shadow-lg">
        <div class="card-header text-dark text-center h1 border-0">
            Instituições Registradas
        </div>
        <div class="card-body">
            <table id="tabela_instituicoes">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.InstituicaoID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Endereco)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.InstituicaoID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Endereco)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.InstituicaoID">Editar</a> |
                                <a asp-action="Details" asp-route-id="@item.InstituicaoID">Detalhes</a> |
                                <a asp-action="Delete" asp-route-id="@item.InstituicaoID">Deletar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer text-center border-0">
            <a asp-action="Create" class="btn btn-success">Criar uma nova instituição</a>
        </div>

    </div>
</div>

@section ScriptPage {
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>

    <environment exclude="Development">
        <script" href="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js" asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-value="absolute"></script">
    </environment>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tabela_instituicoes').DataTable();
        });
    </script>
}